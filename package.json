{
  "name": "aujourdhuirpg",
  "version": "0.1.0",
  "private": true,
  "description": "Un jeu de rôle textuel interactif propulsé par l'IA, explorant la France à travers une architecture modulaire en cascade.",
  "author": "Sevangmb",
  "scripts": {
    "dev": "next dev",
    "genkit:dev": "genkit start -- tsx src/ai/dev.ts",
    "genkit:watch": "genkit start -- tsx --watch src/ai/dev.ts",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf .next out",
    "dev:all": "concurrently \"npm run dev\" \"npm run genkit:watch\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:ai": "tsx test-ai-logic.ts",
    "validate": "npm run typecheck && npm run lint && npm run test",
    "setup": "npm install && cp .env.example .env.local",
    "postinstall": "patch-package"
  },
  "dependencies": {
    "@genkit-ai/googleai": "^1.8.0",
